{
  "manifest_version": 3,
  "name": "Canvas Exam Calendar Sync",
  "version": "1.0.0",
  "description": "Automatically extracts important dates (exams, assignments, deadlines, etc.) from Canvas syllabi and adds them to your calendar",
  "permissions": [
    "activeTab",
    "storage",
    "identity",
    "downloads",
    "scripting"
  ],
  "host_permissions": [
    "https://*.instructure.com/*",
    "https://www.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.instructure.com/*"],
      "js": ["libs/pdf.min.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": ["libs/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
